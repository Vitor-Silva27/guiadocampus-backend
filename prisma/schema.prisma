// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sector {
  id          String      @id @default(uuid())
  name        String      @unique
  description String
  services    Service[]
  protocols   Protocol[]
  guidelines  Guideline[]
  contacts    Contact[]
  infos       Info[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sectors")
}

model Protocol {
  id          String   @id @default(uuid())
  title       String
  description String
  sectors     Sector[]

  @@map("protocols")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  description String
  sectors     Sector[]

  @@map("services")
}

model Guideline {
  id          String   @id @default(uuid())
  title       String
  description String
  ref         String
  sectors     Sector[]

  @@map("guidelines")
}

model Contact {
  id             String   @id @default(uuid())
  administration String
  responsible    String
  email          String
  phone          String
  sectors        Sector[]

  @@map("contacts")
}

model Info {
  id          String  @id @default(uuid())
  title       String
  description String
  Sector      Sector? @relation(fields: [sectorId], references: [id])
  sectorId    String?

  @@map("infos")
}

model Admin {
  id String @id @default(uuid())
  name String
  password String
  email String

  @@map("admins")
}