// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sector {
  id          String    @id @default(uuid())
  name        String    @unique
  description String
  icon        String
  services    Service[]
  contacts    Contact[]
  infos       Info[]
  embeds      Embed[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sectors")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  description String
  icon        String?
  sectors     Sector[]
  embeds      Embed[]

  @@map("services")
}

model Contact {
  id          String   @id @default(uuid())
  title       String
  responsible String
  email       String?
  phone       String?
  sectors     Sector[]

  @@map("contacts")
}

model Info {
  id          String  @id @default(uuid())
  title       String
  description String
  icon        String
  Sector      Sector? @relation(fields: [sectorId], references: [id])
  sectorId    String?

  @@map("infos")
}

model Admin {
  id       String @id @default(uuid())
  name     String
  password String
  email    String

  @@map("admins")
}

model Embed {
  id        String   @id @default(uuid())
  icon      String?
  title     String
  link      String
  Sector    Sector?  @relation(fields: [sectorId], references: [id])
  sectorId  String?
  Service   Service? @relation(fields: [serviceId], references: [id])
  serviceId String?

  @@map("embeds")
}
